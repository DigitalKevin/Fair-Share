generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")      // pooled (runtime)
  directUrl = env("DIRECT_URL") // direct (migrations)
}

model Group {
  id        String   @id @default(uuid())
  name      String
  people    Person[]
  expenses  Expense[]
  createdAt DateTime @default(now())
}

model Person {
  id        Int      @id @default(autoincrement())
  name      String
  groupId   String
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  expenses  Expense[] @relation("PaidExpenses")

  @@unique([groupId, name])
}

model Expense {
  id           Int      @id @default(autoincrement())
  description  String?
  amount       Float
  groupId      String
  group        Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  payerId      Int
  payer        Person  @relation("PaidExpenses", fields: [payerId], references: [id], onDelete: Cascade)

  participants Json
  createdAt    DateTime @default(now())
}
